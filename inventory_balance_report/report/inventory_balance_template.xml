<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inventory_balance_template">
        <t t-call="web.basic_layout">
            <div class="page" style="font-family: 'Arial', sans-serif;">
                <div style="direction: rtl; text-align: right;">
                    <!-- Address -->
                    <div style="margin-bottom: 20px;">
                        <h3 style="color: #155724; white-space: normal; word-break: break-word; line-height: 1.6;">
                            Inventory Balance Report<br/>
                            Location:
                            <t t-esc="', '.join([loc.name for loc in wizard.location_ids]) if wizard.location_ids else 'All Locations'"/><br/>
                            Period:
                            From <t t-esc="wizard.date_from.strftime('%Y-%m-%d')"/>
                            To <t t-esc="wizard.date_to.strftime('%Y-%m-%d')"/>
                        </h3>
                    </div>

                    <!-- Table -->
                    <table class="table table-sm table-bordered" style="width: 100%; margin-top: 20px;">
                        <thead>
                            <tr>
                                <th style="background-color: #28a745; color: white; width: 30%;">Location</th>
                                <th style="background-color: #28a745; color: white; width: 30%;">Product</th>
                                <th style="background-color: #28a745; color: white;">Unit</th>
                                <th style="background-color: #28a745; color: white;">Opening Quantity</th>
                                <th style="background-color: #28a745; color: white;">Incoming</th>
                                <th style="background-color: #28a745; color: white;">Outgoing</th>
                                <th style="background-color: #28a745; color: white;">Current Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td><t t-esc="line.location_id.name"/></td>
                                    <td style="width: 30%;"><t t-esc="line.product_id.display_name"/></td>
                                    <td><t t-esc="line.product_uom.name"/></td>
                                    <td><t t-esc="line.opening_qty"/></td>
                                    <td><t t-esc="line.in_qty"/></td>
                                    <td><t t-esc="line.out_qty"/></td>
                                    <td><t t-esc="line.balance"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>
