<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_inventory_report_wizard_form" model="ir.ui.view">
        <field name="name">inventory.report.wizard.form</field>
        <field name="model">inventory.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Inventory Report Wizard">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="product_id" create="false" options="{'no_open': True}"/>
                        <field name="location_ids" required="1" widget="many2many_tags"
                               domain="[('usage','=','internal')]" create="false" options="{'no_open': True}"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                        <field name="category_id" create="false" options="{'no_open': True}"/>
                    </group>
                </group>
                <footer>
                  <button name="action_generate_report" type="object" string="Report View" class="btn-primary"/>
                  <button name="export_to_excel" type="object" string="ðŸ“Š Export to Excel" class="btn-secondary"/>
                  <button name="export_to_pdf" type="object" string="ðŸ“„ Export to PDF" class="btn-secondary"/>
                  <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
