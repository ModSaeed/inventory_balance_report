<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_inventory_report_line_list" model="ir.ui.view">
        <field name="name">inventory.report.line.list</field>
        <field name="model">inventory.report.line</field>
        <field name="arch" type="xml">
            <list string="Inventory Report Lines" create="false" delete="false">
                <field name="product_id"/>
                <field name="product_uom"/>
                <field name="location_id"/>
                <field name="opening_qty"/>
                <field name="in_qty"/>
                <field name="out_qty"/>
                <field name="balance"/>
            </list>
        </field>
    </record>

    <record id="view_inventory_report_line_search" model="ir.ui.view">
        <field name="name">inventory.report.line.search</field>
        <field name="model">inventory.report.line</field>
        <field name="arch" type="xml">
            <search string="Inventory Report Search">
                <field name="product_id"/>
                <field name="location_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_location" string="Location" context="{'group_by': 'location_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_inventory_report_line" model="ir.actions.act_window">
        <field name="name">Inventory Balance Report</field>
        <field name="res_model">inventory.report.line</field>
        <field name="view_mode">list</field>
        <field name="target">current</field>
    </record>

</odoo>
